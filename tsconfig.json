{
  "extends": "@finsweet/tsconfig",
  "compilerOptions": {
    "target": "ES2019",
    "baseUrl": ".",
    "paths": {
      "$global/*": ["global/*"],
      "$packages/*": ["packages/*"]
    }
  },
  "exclude": [
    "packages/components/**/*.ts",
    "packages/cmssave/**/*.ts",
    "packages/template/**/*.ts",
    "packages/support/**/*.ts"
  ]
}
